        <Spinner
            android:id="@+id/historyResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:gravity="center"
            android:background="@color/gray"></Spinner>
        <!--<Spinner
